<% include ../partials/header %>
<div class="container new-form">
    <!-- <div class="row"> -->
        <h1>Edit <%= show.name %></h1>
        <form action="/shows/<%= show._id %>?_method=PUT" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="showName">Show Title:</label>
                <%= show.name %>
            </div>
            <!-- <div class="form-group">
                <label for="imgURL">Image URL:</label>
                <input class="form-control" type="text" name="image" placeholder="Image URL" />
            </div> -->
            <div class="form-group">
                <label for="showDouban">Douban ID:</label>
                <input class="form-control" type="text" name="show[douban]" value="<%= show.douban %>" />
            </div>
            <div class="form-group">
              <label for="showImage">Poster of the Show:</label>
              <input type="file" name="image" accept="image/*">
              <p class="help-block">Upload a poster of this show.</p>
            </div>
            <div class="form-group">
              <label for="introduction">Introduction:</label>
              <textarea class="form-control" rows="5" name="show[intro]"><%= show.intro %></textarea>
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-default btn-primary btn-block" type="submit">Submit</button>
            </div>
        </form>
        <!-- <a href="/back">Go Back</a> -->
    <!-- </div> -->
</div>
<% include ../partials/footer %>
