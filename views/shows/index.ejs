<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Search for the Show</h1>
            <form class="form-inline mt-3" action="/shows/results" method="get">
                <input class="form-control mr-sm-2" type="text" name="show" placeholder="Person Of Interest" />
                <input type="submit" class="small ui grey button btn-md" value="Search"/>
            </form>
        </div>
    </header>
    <div class="row headline">
        <div class="col-lg-12">
            <h3><%= headline %></h3>
        </div>
    </div>
    <div class="row">
        <% shows.forEach(function(show) { %>
                <div class="col-md-3 col-sm-6 outer-row">
                    <div class="card">
                        <img class="card-img-top" src="<%= show.imageURL %>">
                        <div class="card-body">
                            <h3 class="card-title"><%= show.name %></h3>
                            <div class="intro-div">
                                <p class="max-lines card-text" style="display:none;"><%= show.intro %></p>
                                <button class=" small ui grey basic button mb-2 mt-2">Display Intro</button>
                            </div>
                            <a href="/shows/<%= show._id %>" class="small ui grey button flimed-in-btn">Filmed in</a>
                        </div>
                    </div>
                </div>
        <% }); %>
    </div>
    <div class="ui centered grid mt-3">
        <div class="center aligned column">
            <div class="ui pagination menu">
                <% if (pages && pages > 0) { %>
                <!-- <ul class="pagination justify-content-center"> -->
                    <% if (current == 1) { %>
                    <div class="disabled item">First</div>
                    <% } else { %>
                    <a href="/shows" class="item">First</a>
                    <% } %>

                    <% if (current == 1) { %>
                    <div class="disabled item">«</div>
                    <% } else { %>
                    <a class="item" href="/shows?page=<%= Number(current) - 1 %>">«</a>
                    <% } %>

                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                    <div class="disabled item">...</div>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                    <% if (i == current) { %>
                    <a class="active item"><%= i %></a>
                    <% } else { %>
                    <a class="item" href="/shows?page=<%= i %>"><%= i %></a>
                    <% } %>
                    <% if (i == Number(current) + 4 && i < pages) { %>
                    <div class="disabled item">...</div>
                    <% } %>
                    <% } %>

                    <% if (current == pages) { %>
                    <div class="disabled item">»</div>
                    <% } else { %>
                    <a class="item" href="/shows?page=<%= Number(current) + 1 %>">»</a>
                    <% } %>

                    <% if (current == pages) { %>
                    <div class="disabled item">Last</div>
                    <% } else { %>
                    <a class="item" href="/shows?page=<%= pages %>">Last</a>
                    <% } %>
                <!-- </ul> -->
                <% } %>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>
