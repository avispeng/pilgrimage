<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Search for the City</h1>
            <form class="form-inline" action="/cities/results" method="get">
                <input class="form-control mr-sm-2" type="text" name="city" placeholder="Toronto" />
                <input type="submit" class="btn btn-primary btn-md" />
            </form>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h3><%= headline %></h3>
        </div>
    </div>
    <div class="ui items">
        <% cities.forEach(function(city) { %>
        <div class="item">
            <div class="image">
                <img src="<%= city.imageURL[0] %>">
            </div>
            <div class="content">
                <a class="header" href="/cities/<%= city._id %>"><%= city.name %></a>
                <div class="meta">
                    <span><%= city.country %></span>
                </div>
                <div class="description">
                <p><%= city.intro %></p>
                </div>
                <div class="extra">
                    <% if(city.shows) { %>
                        <% city.shows.forEach(function(show) { %>
                            <a><%= show.name %></a>,
                        <% }); %>
                    <% } %>
                </div>
            </div>
        </div>
        <hr class="style-six" />
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>
