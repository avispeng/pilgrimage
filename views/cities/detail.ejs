<% include ../partials/header %>
<div class="container">
    <!-- <div class="jumbotron">
        <div class="col-md-4">
            <h1><%= city.name %> - <strong><%= city.country %></strong></h1>
            <p><%= city.intro %></p>
        </div>
        <div class="col-md-7">
            <img src="<%= city.imageURL %>" id="city-detail-image">
        </div>
    </div> -->
    <div class="card bg-dark text-white">
      <img class="card-img" src="<%= city.imageURL %>" id="city-detail-image" alt="<%= city.name %>">
      <div class="card-img-overlay">
        <h5 class="card-title"><%= city.name %> - <strong><%= city.country %></strong></h5>
        <p class="card-text"><%= city.intro %></p>
        <% if(currentUser) { %>
            <a class="btn btn-light" href="/cities/<%= city._id %>/edit">Edit</a>
        <% } %>
      </div>
    </div>
    <div class="row cardrow">
        <div class="col-lg-12">
            <h3>The Shows That Have Been Shot There...</h3>
        </div>
    </div>
    <div class="row mb-2">
        <% city.shows.forEach(function(s) { %>
        <div class="col-md-6 cardrow">
          <div class="card flex-md-row mb-4 shadow-sm h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
              <!-- <strong class="d-inline-block mb-2 text-primary">World</strong> -->
              <h3 class="mb-0">
                <a class="text-dark" href="/shows/<%= s._id %>"><%= s.name %></a>
              </h3>
              <!-- <div class="mb-1 text-muted">Link To Douban</div> -->
              <p class="card-text mb-auto"><%= s.intro %></p>
              <a href="https://movie.douban.com/subject/<%= s.douban %>">Link to Douban</a>
            </div>
            <img class="card-img-right flex-auto d-none d-lg-block"
            data-src="holder.js/200x250?theme=thumb" data-holder-rendered="true"
            id="city-detail-show-image"
            src="<%= s.imageURL %>" >
          </div>
        </div>
        <% }); %>
    </div>
</div>



<% include ../partials/footer %>
