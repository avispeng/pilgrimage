<% include ../partials/header %>

<div class="container top-to-nav">
    <header class="jumbotron">
        <div class="container">
            <h1>Search for the City</h1>
            <form action="/cities/results" method="get">
                <div class="form-group col-sm-4">
                    <input class="form-control" type="text" name="city" placeholder="Toronto" />
                </div>
                <div class="form-group col-sm-2">
                    <input type="submit" class="btn btn-primary btn-md" />
                </div>
            </form>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h3><%= headline %></h3>
        </div>
    </div>
    <div class="row-fluid">
        <% cities.forEach(function(city) { %>
            <!-- <div class="col-lg-12">
                <div class="col-md-3">
                    <div class="thumbnail">
                        <img src="<%= city.imageURL %>">
                        <div class="caption">
                            <a href="/cities/<%= city._id %>" >
                                <h4><%= city.name %></h4>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div>
                        <%= city.intro %>
                    </div>
                </div>
            </div> -->
            <ul class="thumbnails">
                <li class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= city.imageURL[0] %>">
                        <div class="caption">
                            <h3><%= city.name %></h3>
                            <p class="max-lines"><%= city.intro %></p>
                            <p>
                                <a href="/cities/<%= city._id %>" class="btn btn-primary">Learn More</a>
                            </p>
                        </div>
                    </div>
                </li>
            </ul>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>
