<% include ../partials/header %>
<div class="container new-form">
    <!-- <div class="row"> -->
        <h1>Add a New City</h1>
        <form action="/cities" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="cityName">City:</label>
                <input class="form-control" type="text" name="name" placeholder="Toronto" />
            </div>
            <div class="form-group">
                <label for="countryName">Country/Region:</label>
                <input class="form-control" type="text" name="country" placeholder="Canada" />
            </div>
            <!-- <div class="form-group">
                <label for="imgURL">Image URL:</label>
                <input class="form-control" type="text" name="image" placeholder="Image URL" />
            </div> -->
            <div class="form-group">
              <label for="cityImage">Picture of the City:</label>
              <input type="file" id="cityImage" name="image" accept="image/*">
              <p class="help-block">Upload a good picture of this city.</p>
            </div>
            <div class="form-group">
              <label for="introduction">Introduction:</label>
              <textarea class="form-control" rows="5" name="intro" placeholder="What is this country like"></textarea>
            </div>
            <div class="form-group">
                <label for="showName">Show Name and It's Douban ID:</label>
                <div class="row addable">
                    <div class="col-sm-6">
                        <input class="form-control" type="text" name="show[]" placeholder="Orphan Black" />
                    </div>
                    <div class="col-sm-6">
                        <input class="form-control" type="text" name="douban[]" placeholder="20471761" />
                    </div>
                </div>
                <button type="button" class="btn btn-secondary" id="addrow">Add One More</button>
                <small class="form-text text-muted">Douban ID Must be 7 - 8 Digits.</small>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-primary btn-block" type="submit">Submit</button>
            </div>
        </form>
        <!-- <a href="/back">Go Back</a> -->
    <!-- </div> -->
</div>
<% include ../partials/footer %>
